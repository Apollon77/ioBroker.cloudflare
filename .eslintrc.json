{
	"root": true,
	"env": {
		"es6": true,
		"node": true,
		"mocha": true
	},
	"extends": [
		"eslint:recommended"
	],
	"plugins": [],
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"no-console": "off",
		"no-unused-vars": [
			"error",
			{
				"ignoreRestSiblings": true,
				"argsIgnorePattern": "^_"
			}
		],
		"no-var": "error",
		"no-trailing-spaces": "error",
		"prefer-const": "error"
	},
	"parserOptions": {
		"ecmaVersion": 2020
	}
}